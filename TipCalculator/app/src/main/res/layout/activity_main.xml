<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.lzhao.tipcalculator.MainActivity">

    <TextView
            android:text="@string/tip_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView3"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.2" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/enteredAmountText"/>
    <SeekBar
            android:layout_width="271dp"
            android:layout_height="26dp" android:id="@+id/seekBar"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.32"
            android:max="20"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:id="@+id/enteredAmountText"
            app:layout_constraintHorizontal_bias="0.3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp" android:hint="@string/enter_bill" android:inputType="number"/>
    <Button
            android:text="@string/calculate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/calculateBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.187" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultTextView"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/calculateBtn"
            app:layout_constraintVertical_bias="0.18" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewSeekbar"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/seekBar" android:layout_marginLeft="21dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.286"/>
</android.support.constraint.ConstraintLayout>
